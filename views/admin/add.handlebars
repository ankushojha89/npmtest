 <a class="btn btn-success float-right btn-sm" href="/admin">Go to admin</a>
 <h1 class="padding20">Add New Employee</h1> 

<div id="messages">
      
</div>
 <form id="addemployee"  class="row padding20" method="post" action="/admin/rest" enctype="multipart/form-data">
 
 <div class="col-lg-10">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name" value="{{name}}" placeholder="Enter Employee name">
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="email" name="email" value="{{email}}" placeholder="Enter Email">
    </div>
  </div>
  <div class="form-group row">
    <label for="designation" class="col-sm-2 col-form-label">Designation</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="designation" value="{{technology}}" name="designation" placeholder="Enter Designation">
    </div>
  </div>
  
  <div class="form-group row">
    <label for="short_desc" class="col-sm-2 col-form-label">About Employee</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="short_desc"  value="{{short_desc}}" name="short_desc" placeholder="Short Description About Employee">
    </div>
  </div>
 
    <div class="form-group row">
    <label for="desc" class="col-sm-2 col-form-label">Profile Image</label>
    <div class="col-sm-10">
     <input type="file" class="form-control-file" id="profileimage" name="profileimage">        
    </div>
  </div>
  
   <div class="form-group row">
    <label for="desc" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
     <textarea name="desc" id="desc" class="form-control" placeholder="Full Description About Employee"> {{{desc}}}</textarea>      
    </div>
  </div>
     </div>
      <div class="col-lg-2">      
    <button type="submit" class="btn btn-lg btn-primary">Add Employee</button>        
     </div>
 
</form>

<script src="/js/addemployee.js"></script>